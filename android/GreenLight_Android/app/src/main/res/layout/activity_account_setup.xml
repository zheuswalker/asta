<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AccountSetup">
    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/buttonBG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <TextView

                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#fff"
                android:text="ASTA"/>


        </LinearLayout>
    </android.support.v7.widget.CardView>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"
            android:text="Account Setup"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <EditText
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/account_circle_black"
                android:fontFamily="@font/poppins"
                android:digits="_ABCDEFGHIJKLMNOPQRSTUVWXYZ abcdefghijklmnopqrstuvwxyz1234567890@."
                android:inputType="textFilter"
                android:maxLines="1"
                android:maxLength="50"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:textColor="#232323"
                android:id="@+id/txtRegUsername"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="12dp"
                android:background="@drawable/roundrec_edittext"
                android:hint="Enter email address"
                android:textColorHint="#ADACAC"
                />

            <EditText
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/lock"
                android:fontFamily="@font/poppins"
                android:digits="_ABCDEFGHIJKLMNOPQRSTUVWXYZ abcdefghijklmnopqrstuvwxyz1234567890@."
                android:inputType="textFilter"
                android:maxLines="1"
                android:maxLength="50"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:textColor="#232323"
                android:id="@+id/txtRegPassword"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="12dp"
                android:background="@drawable/roundrec_edittext"
                android:hint="Enter password"
                android:textColorHint="#ADACAC"
                />

            <EditText
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:fontFamily="@font/poppins"
                android:digits="_ABCDEFGHIJKLMNOPQRSTUVWXYZ abcdefghijklmnopqrstuvwxyz1234567890@."
                android:inputType="textFilter"
                android:maxLines="1"
                android:maxLength="50"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:textColor="#232323"
                android:id="@+id/txtRegFName"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="12dp"
                android:background="@drawable/roundrec_edittext"
                android:hint="Enter Fullname"
                android:textColorHint="#ADACAC"
                />

            <EditText
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_work_black_24dp"
                android:fontFamily="@font/poppins"
                android:digits="_ABCDEFGHIJKLMNOPQRSTUVWXYZ abcdefghijklmnopqrstuvwxyz1234567890@."
                android:inputType="textFilter"
                android:maxLines="1"
                android:maxLength="50"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:textColor="#232323"
                android:id="@+id/ddProfession"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="12dp"
                android:background="@drawable/roundrec_edittext"
                android:hint="Profession (IT Specialist, Accountant, Nurse, Marketing, Managerial Skills)"
                android:textColorHint="#ADACAC"
                />


        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_button"
                android:text="SUBMIT"
                android:textColor="#fff"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>